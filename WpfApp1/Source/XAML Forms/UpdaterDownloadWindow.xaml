<Window x:Class="BSP.Source.XAML_Forms.UpdaterDownloadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BSP.Source.XAML_Forms"
        mc:Ignorable="d"
        Title="{DynamicResource title_UpdateDialogTitle}" Height="86.884" Width="495.024" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" ShowInTaskbar="False" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="0.6*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="downloadLabel" Text="{StaticResource updaterWindow_ProgressTitle}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <ProgressBar x:Name="pbUpdaterProgress" Grid.Row="1" VerticalAlignment="Center" MinHeight="23" Padding="0" UseLayoutRounding="False" Margin="5" IsIndeterminate="True"/>
    </Grid>
</Window>
