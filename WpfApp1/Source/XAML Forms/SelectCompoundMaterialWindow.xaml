<Window x:Class="BSP.SelectCompoundMaterialWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BSP"
        mc:Ignorable="d"
        Title="{StaticResource SourceMaterialWindowsTitle}" Height="117.298" Width="457.701" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="23"/>
            <RowDefinition Height="27"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="{StaticResource ComboboxSourceMaterials_TextBox}" Grid.Column="0" Grid.Row="0"/>
        <ComboBox x:Name="cbSourceMaterial" Grid.Column="0" Grid.Row="1" Margin="0">
            <ComboBoxItem>
                <TextBlock Text="{Binding Name}"/>
            </ComboBoxItem>
        </ComboBox>
        <Button Content="{StaticResource Button_OK}" Grid.Column="0" Grid.Row="2" Height="27" VerticalAlignment="Top" Margin="0,5,0,0"/>
    </Grid>
</Window>
