<UserControl x:Class="BSP.Views.MainWindow.SelectedRadionuclidesSection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:BSP.ViewModels"
             xmlns:local="clr-namespace:BSP.Views.MainWindow"
             mc:Ignorable="d" >
    <GroupBox Header="{StaticResource tab_Source_SelectedRadionuclides}" Style="{StaticResource DefaultGroupBox}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            
            <!--Buttons-->
            <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,5" IsEnabled="{Binding SourceTab.IsAutoGeneratedModeChecked}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" BorderBrush="#FFBDBDBD" Margin="0,0,5,0" Command="{Binding SourceTab.AddNuclideCommand}" MinWidth="80" Style="{StaticResource DefaultButton}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="../../Resources/Images/add_nuclide.png" Margin="0,0,5,0" MaxHeight="{StaticResource IconMaxHeight}"/>
                        <TextBlock Text="{StaticResource btn_Add}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Grid.Column="1" BorderBrush="#FFBDBDBD" Margin="5,0,0,0" Command="{Binding SourceTab.RemoveNuclideCommand}" MinWidth="80" Style="{StaticResource DefaultButton}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="../../Resources/Images/remove_nuclide.png" Margin="0,0,5,0" Stretch="UniformToFill" MaxHeight="{StaticResource IconMaxHeight}"/>
                        <TextBlock Text="{StaticResource btn_Remove}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
            
            <!--Selected nuclides grid-->
            <DataGrid Grid.Row="1" Grid.Column="0" 
                      ItemsSource="{Binding SourceTab.SelectedRadionuclides}"
                      SelectedItem="{Binding SourceTab.SelectedRadionuclide}"
                      MinHeight="120"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserResizeRows="False"
                      CanUserSortColumns="False"
                      CanUserReorderColumns="False"
                      Style="{StaticResource DefaultDataGrid}"
                      IsEnabled="{Binding SourceTab.IsAutoGeneratedModeChecked}">
                <DataGrid.Columns>
                    <DataGridComboBoxColumn Header="{StaticResource tab_Source_SelectedRadionuclides_NuclideHeader}" 
                                            ItemsSource="{Binding Source={x:Static vm:AvailableDataController.AvailableNuclides}}" 
                                            SelectedValueBinding="{Binding Id, NotifyOnTargetUpdated=True}" SelectedValuePath="Id"
                                            DisplayMemberPath="Name"
                                            Width="0.4*"/>
                    <DataGridTextColumn Header="{StaticResource tab_Source_SelectedRadionuclides_ActivityHeader}" 
                                        Binding="{Binding Activity, StringFormat={}{0:e3}, ValidatesOnDataErrors=True}"
                                        EditingElementStyle="{StaticResource textboxWithError}"
                                        Width="0.6*"/>
                </DataGrid.Columns>
            </DataGrid>

            <Grid Grid.Row="2" Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.6*"/>
                    <ColumnDefinition Width="0.4*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{StaticResource tab_Source_Bremsstrahlung_TotalActivity}" 
                           Grid.Column="0" Grid.Row="1" 
                           VerticalAlignment="Center"
                           ToolTip="{StaticResource tooltipSumActivityBox}"/>
                <TextBox Text="{Binding SourceTab.SourceTotalActivity, StringFormat={}{0:E3}, ValidatesOnDataErrors=True}"  
                         Grid.Row="1" Grid.Column="1"  
                         IsEnabled="{Binding SourceTab.IsAutoGeneratedModeChecked, Converter={StaticResource InversedBooleanConverter}}" 
                         Style="{StaticResource DefaultTextBox}"/>
            </Grid>
        </Grid>
    </GroupBox>
</UserControl>
