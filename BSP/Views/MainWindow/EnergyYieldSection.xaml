<UserControl x:Class="BSP.Views.MainWindow.EnergyYieldSection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox Header="{StaticResource tab_Source_Bremsstrahlung_GroupHeader}" Style="{StaticResource DefaultGroupBox}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <GroupBox Grid.Row="0" Header="Energy-Yield creation mode" 
                      Margin="0,0,0,5"
                      Style="{StaticResource DefaultGroupBox}">
                <StackPanel>
                    <RadioButton Content="Auto-generated" IsChecked="{Binding SourceTab.IsAutoGeneratedModeChecked}"/>
                    <RadioButton Content="User-defined" Margin="0,5,0,0"/>
                </StackPanel>
            </GroupBox>

            <TextBlock Grid.Row="1" Text="{StaticResource tab_Source_Bremsstrahlung_Hint}" Margin="0,0,0,3"/>
            <DataGrid Grid.Row="2"
                      ItemsSource="{Binding SourceTab.EnergyYieldList}"
                      AutoGenerateColumns="False"
                      CanUserDeleteRows="False"
                      CanUserAddRows="False"
                      CanUserReorderColumns="False"
                      CanUserResizeRows="False"
                      CanUserSortColumns="False"
                      SelectionMode="Extended" SelectionUnit="Cell"
                      Style="{StaticResource DefaultDataGrid}"
                      IsReadOnly="{Binding SourceTab.IsAutoGeneratedModeChecked}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{StaticResource tab_Source_Bremsstrahlung_Energy}" 
                                        Binding="{Binding Energy, StringFormat={}{0:G3}, ValidatesOnDataErrors=True}"
                                        EditingElementStyle="{StaticResource textboxWithError}"
                                        Width="*"/>
                    <DataGridTextColumn Header="{StaticResource tab_Source_Bremsstrahlung_Yield}" 
                                        Binding="{Binding EnergyYield, StringFormat={}{0:e3}, ValidatesOnDataErrors=True}" 
                                        EditingElementStyle="{StaticResource textboxWithError}"
                                        Width="*"/>
                    <!--<DataGridTextColumn Header="{StaticResource tab_Source_Bremsstrahlung_EnergyFlux}" 
                                        Binding="{Binding EnergyFlux, StringFormat={}{0:e3}, ValidatesOnDataErrors=True}" 
                                        EditingElementStyle="{StaticResource textboxWithError}"
                                        Width="*" IsReadOnly="true"/>-->
                </DataGrid.Columns>
            </DataGrid>

            <Grid Grid.Row="3" Margin="0,5,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.6*"/>
                    <ColumnDefinition Width="0.4*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{StaticResource tab_Source_Bremsstrahlung_TotalEnergyFlux}" 
                           Grid.Column="0" Grid.Row="0" 
                           VerticalAlignment="Center" 
                           Margin="0,5,0,3"
                           ToolTip="{StaticResource tooltipSumIbetaBox}"/>
                <TextBox Text="{Binding SourceTab.SourceMaxYield, StringFormat={}{0:G3}}" 
                         Grid.Row="0" Grid.Column="1" 
                         IsEnabled="False" 
                         ToolTip="{StaticResource tooltipSumIbetaBox}" 
                         Style="{StaticResource DefaultTextBox}"/>
            </Grid>

            <Button Grid.Column="0" Grid.Row="4"
                    Content="{StaticResource tab_Source_Bremsstrahlung_Btn_UpdateYields}"  
                    Margin="0,5,0,0" 
                    Command="{Binding SourceTab.UpdateYieldsCommand}"
                    Style="{StaticResource DefaultButton}"
                    IsEnabled="{Binding SourceTab.IsAutoGeneratedModeChecked}"/>
        </Grid>
    </GroupBox>
</UserControl>
